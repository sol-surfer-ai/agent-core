{
  "name": "8004-solana",
  "version": "0.5.0",
  "description": "TypeScript SDK for ERC-8004 on Solana - Agent identity, reputation and validation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:e2e": "NODE_OPTIONS='--experimental-vm-modules' INDEXER_URL='http://localhost:3001/rest/v1' jest --testPathPattern=e2e-solana --testPathIgnorePatterns='[]' --verbose --runInBand",
    "test:e2e:identity": "NODE_OPTIONS='--experimental-vm-modules' INDEXER_URL='http://localhost:3001/rest/v1' jest tests/e2e-solana/01-identity-complete.test.ts --verbose",
    "test:e2e:reputation": "NODE_OPTIONS='--experimental-vm-modules' INDEXER_URL='http://localhost:3001/rest/v1' jest tests/e2e-solana/02-reputation-complete.test.ts --verbose",
    "test:e2e:validation": "NODE_OPTIONS='--experimental-vm-modules' INDEXER_URL='http://localhost:3001/rest/v1' jest tests/e2e-solana/03-validation-complete.test.ts --verbose",
    "test:e2e:atom": "NODE_OPTIONS='--experimental-vm-modules' INDEXER_URL='http://localhost:3001/rest/v1' jest tests/e2e-solana/04-atom-engine-complete.test.ts --verbose",
    "test:e2e:security": "NODE_OPTIONS='--experimental-vm-modules' INDEXER_URL='http://localhost:3001/rest/v1' jest tests/e2e-solana/05-security-attacks.test.ts --verbose",
    "test:e2e:indexer": "NODE_OPTIONS='--experimental-vm-modules' INDEXER_URL='http://localhost:3001/rest/v1' jest tests/e2e-solana/06-indexer-api.test.ts --verbose",
    "test:e2e:all": "npm run test:e2e:identity && npm run test:e2e:reputation && npm run test:e2e:validation && npm run test:e2e:atom && npm run test:e2e:security && npm run test:e2e:indexer",
    "test:e2e:devnet": "NODE_OPTIONS='--experimental-vm-modules' SOLANA_RPC_URL='https://api.devnet.solana.com' INDEXER_URL='https://uhjytdjxvfbppgjicfly.supabase.co/rest/v1' jest tests/e2e-solana/e2e-devnet-funded.test.ts --verbose --runInBand",
    "test:e2e:v050": "NODE_OPTIONS='--experimental-vm-modules' SOLANA_RPC_URL='https://api.devnet.solana.com' INDEXER_URL='https://uhjytdjxvfbppgjicfly.supabase.co/rest/v1' jest tests/e2e-solana/07-v050-value-decimals.test.ts --verbose --runInBand",
    "test:e2e:gaming": "NODE_OPTIONS='--experimental-vm-modules' SOLANA_RPC_URL='https://api.devnet.solana.com' INDEXER_URL='https://uhjytdjxvfbppgjicfly.supabase.co/rest/v1' jest tests/e2e-solana/08-reputation-gaming.test.ts --verbose --runInBand",
    "test:wallets:create": "npx tsx scripts/test-wallet-manager.ts create",
    "test:wallets:recover": "npx tsx scripts/test-wallet-manager.ts recover",
    "test:wallets:status": "npx tsx scripts/test-wallet-manager.ts status",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src",
    "format": "prettier --write src",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build && npm run lint"
  },
  "keywords": [
    "solana",
    "erc-8004",
    "agent",
    "reputation",
    "identity",
    "blockchain",
    "web3",
    "nft"
  ],
  "author": "QuantuLabs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/QuantuLabs/8004-solana-ts.git"
  },
  "homepage": "https://github.com/QuantuLabs/8004-solana-ts",
  "bugs": {
    "url": "https://github.com/QuantuLabs/8004-solana-ts/issues"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@coral-xyz/borsh": "^0.32.1",
    "@solana/web3.js": "^1.95.0",
    "borsh": "^0.7.0",
    "bs58": "^6.0.0",
    "ipfs-http-client": "^60.0.1",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "nanoid": "^5.1.6",
    "parse-duration": "^2.1.3"
  }
}
